{
	"editor.formatOnSave": true,
	// turn it off for JS and JSX, we will do this via eslint
	"[javascript]": {
		"editor.formatOnSave": false
	},
	"[javascriptreact]": {
		"editor.formatOnSave": false
	},
	// tell the ESLint plugin to run on save
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit"
	},
	// Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
	"prettier.disableLanguages": [
		"javascript",
		"javascriptreact"
	],
	"terminal.integrated.cwd": "${workspaceFolder}",
	"cwd": "${workspaceFolder}",
	"code-runner.cwd": " ${workspaceFolder}",
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#e4ff33",
		"activityBar.background": "#e4ff33",
		"activityBar.foreground": "#15202b",
		"activityBar.inactiveForeground": "#15202b99",
		"activityBarBadge.background": "#00a6bf",
		"activityBarBadge.foreground": "#e7e7e7",
		"commandCenter.border": "#15202b99",
		"sash.hoverBorder": "#e4ff33",
		"statusBar.background": "#ddff00",
		"statusBar.foreground": "#15202b",
		"statusBarItem.hoverBackground": "#b1cc00",
		"statusBarItem.remoteBackground": "#ddff00",
		"statusBarItem.remoteForeground": "#15202b",
		"titleBar.activeBackground": "#ddff00",
		"titleBar.activeForeground": "#15202b",
		"titleBar.inactiveBackground": "#ddff0099",
		"titleBar.inactiveForeground": "#15202b99"
	},
	"peacock.color": "#ddff00"
}